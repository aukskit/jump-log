{
  "name": "jump-log",
	"displayName": "Jump Log",
	"description": "you can jump to the file from build log file.",
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:jump-log.helloWorld",
		"onCommand:jump-log.watchLogFile",
		"onCommand:jump-log.openJumpLogWindow"
	],
	"main": "./src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "jump-log.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "jump-log.openJumpLogWindow",
				"title": "Open jump log window"
			},
			{
				"command": "jump-log.watchLogFile",
				"title": "Watch log file"
			}
		],
		"keybindings": [
			{
				"command": "jump-log.watchLogFile",
				"key": "F5"
			},
			{
				"command": "jump-log.openJumpLogWindow",
				"key": "F12"
			}
		],
		"configuration": {
			"title": "PATH",
			"properties": {
				"PATH.logfile": {
					"type": "string",
					"default": "",
					"description": "Path to .log file"
				},
				"PATH.projectOnUbuntu":{
					"type": "string",
					"default": "",
					"description": "Path to project on Ubuntu"
				},
				"PATH.projectOnWindows":{
					"type": "string",
					"default": "",
					"description": "Path to project on Windows(need to double escape...)"
				},
				"PATH.textfile":{
					"type": "string",
					"default": "",
					"description": "Path to text file(**This file will removed after F5 Pressed**)"
				},
				"PATH.image":{
					"type": "string",
					"default": "",
					"description": "Path to image src"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
        "@types/vscode": "^1.62.0",
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "eslint": "^8.1.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "typescript": "^4.4.4",
        "@vscode/test-electron": "^1.6.2"
    }

}
